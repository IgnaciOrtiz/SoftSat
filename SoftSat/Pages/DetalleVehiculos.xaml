<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftSat.Pages.DetalleVehiculos"
             Title="Detalle Vehiculos"
             BackgroundColor="#C5E4F5">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Vehículo" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,40" />
            <Entry x:Name="Matrícula" Text="{Binding Matricula}" Placeholder="Descripción" Margin="0,0,0,20" />
            <Button Text="Liberar" Clicked="OnLiberarClicked" BackgroundColor="Blue" />
            <Button Text="Ocupar" Clicked="OnOcuparClicked" BackgroundColor="Blue"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>